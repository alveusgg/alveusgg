{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        ""
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": false,
      "automergeType": "pr"
    },
    {
      "matchPackagePatterns": [
        ""
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "all major dependencies",
      "groupSlug": "all-major",
      "automerge": false
    }
  ]
  }
