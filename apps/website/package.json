{
  "name": "@alveusgg/alveusgg-website",
  "version": "0.1.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alveusgg/alveusgg.git",
    "directory": "apps/website"
  },
  "bugs": {
    "url": "https://github.com/alveusgg/alveusgg/issues"
  },
  "scripts": {
    "build:next": "next build",
    "build:next-sitemap": "next-sitemap --config next-sitemap.config.js",
    "build:push-sw": "tsup --config sw.tsup.config.ts",
    "build:manifest": "tsx ./build-scripts/create-manifest.ts",
    "dev:next": "next dev",
    "dev:push-sw": "tsup --watch --config sw.tsup.config.ts",
    "build": "pnpm run --sequential \"/^build:.*/\"",
    "dev": "pnpm run \"/^(build:manifest|dev:.*)/\"",
    "lint": "next typegen && eslint --max-warnings 0",
    "types": "next typegen && tsc --noEmit",
    "start": "next start",
    "test": "vitest"
  },
  "dependencies": {
    "@alveusgg/data": "0.66.1",
    "@alveusgg/database": "workspace:*",
    "@auth/prisma-adapter": "^2.10.0",
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "@bart-krakowski/get-week-info-polyfill": "^1.0.8",
    "@cloudflare/stream-react": "^1.9.2",
    "@dagrejs/dagre": "^1.1.5",
    "@eyevinn/webrtc-player": "^0.13.0",
    "@fontsource/pt-sans": "^5.2.7",
    "@headlessui/react": "^2.2.8",
    "@iframe-resizer/react": "^5.5.5",
    "@maplibre/maplibre-gl-geocoder": "^1.9.0",
    "@next/env": "^15.5.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.16.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/react-query": "^5.87.4",
    "@trpc/client": "^11.5.1",
    "@trpc/next": "^11.5.1",
    "@trpc/react-query": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "@twurple/chat": "^7.4.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/functions": "^3.0.0",
    "@xyflow/react": "^12.8.4",
    "country-list": "^2.4.1",
    "csv-stringify": "^6.6.0",
    "dompurify": "^3.2.6",
    "fast-xml-parser": "^5.2.5",
    "heic-to": "^1.2.2",
    "html-react-parser": "^5.2.6",
    "jsdom": "^26.1.0",
    "linkify-it": "^5.0.0",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "maplibre-gl": "^5.7.1",
    "next": "^15.5.3",
    "next-auth": "^4.24.11",
    "next-sitemap": "^4.2.3",
    "next-superjson": "^1.0.7",
    "oauth": "^0.10.2",
    "pluralize": "^8.0.0",
    "probe-image-size": "^7.2.3",
    "raw-body": "^3.0.1",
    "react": "^19.1.1",
    "react-aria": "^3.43.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-markdown": "^10.1.0",
    "react-quill-new": "^3.6.0",
    "react-stately": "^3.41.0",
    "react-textarea-autosize": "^8.5.9",
    "remark-heading-id": "^1.0.1",
    "schema-dts": "^1.1.5",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
